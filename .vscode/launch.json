    // => `create-neat add eslint`
    {
      "name": "add a plugin",
      "request": "launch",
      "runtimeArgs": ["add", "eslint"],
      "runtimeExecutable": "create-neat",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "type": "node"
    }
  ]
}
