{
  "compilerOptions": {
    /* 基本选项 */
    "target": "es2020", // 指定 ECMAScript 目标版本: 'ES3' (默认), 'ES5', 'ES2015', 'ES2016', 'ES2017','ES2018', 'ES2019', 'ES2020', 或 'ESNEXT'
    "module": "esnext", // 指定生成哪个模块系统代码: 'none', 'commonjs', 'amd', 'system', 'umd', 'es2015', 'es2020', 或 'ESNext'
    "lib": ["dom", "dom.iterable", "esnext"], // 指定要包含在编译中的库文件
    "declaration": true, // 生成相应的 '.d.ts' 文件
    "sourceMap": true, // 生成相应的 '.map' 文件
    "outDir": "./dist", // 指定输出目录
    "rootDir": ".", // 指定输入文件的根目录

    /* 严格的类型检查选项 */
    "strict": true, // 启用所有严格类型检查选项
    "noImplicitAny": true, // 在表达式和声明上有隐含的 'any' 类型时报错
    "strictNullChecks": true, // 严格的 null 检查

    /* 额外检查 */
    "noUnusedLocals": true, // 报告文件中未使用的局部变量错误
    "noUnusedParameters": true, // 报告函数中未使用的参数错误
    "noImplicitReturns": true, // 不允许函数有隐式的返回值

    /* 模块解析选项 */
    "moduleResolution": "node", // 选择模块解析策略：'node' (Node.js) 或 'classic' (TypeScript pre-1.6)
    "baseUrl": "./", // 用于解析非相对模块名称的基目录
    "paths": {
      // 一系列条目，它们重新映射了 import 的查找位置
      "*": ["node_modules/*", "src/types/*"]
    },

    /* 实验性选项 */
    "experimentalDecorators": true, // 启用实验性的装饰器支持
    "emitDecoratorMetadata": true // 为装饰器提供元数据支持
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
