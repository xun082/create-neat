{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "outputs": [""],
      "cache": false,
      "persistent": true
    },
    "@laconic/utils": {
      "outputs": [""]
    },
    "create-neat": {
      "dependsOn": ["@laconic/utils"],
      "outputs": [""]
    }
  }
}
