{
  "name": "create-neat",
  "version": "1.0.0",
  "description": "Zero configuration to quickly create your application",
  "scripts": {
    "commit": "git-cz",
    "add": "pnpm changeset add",
    "push": "pnpm changeset publish",
    "format:ci": "prettier --list-different \"packages/!(template*)/**/src/**/*.ts\"",
    "lint": "eslint \"packages/!(template*)/**/src/**/*.ts\" --fix",
    "lint:ci": "eslint \"packages/!(template*)/**/src/**/*.ts\""    
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.52.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-git": "^1.6.1",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.0",
    "typescript": "^5.1.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
